<%= form_for(@serie) do |f| %>

    <p>
        <%= f.label :name %> </br> 
        <%= f.text_field :name %> </br> 
    </p>

    <p>
        <%= f.label :Poster %> </br> 
        <%= f.text_field :poster, placeholder: ".GIF, .JPEG ou .PNG" %>
    </p>

    <p>
        <%= f.label :classification %> </br> 
        <%= f.text_field :classification %> 
    </p>

    <p>
        <%= f.label :synopsis %>% </br> 
        <%= f.text_area :synopsis, cols:35, rows:10 %>  
    </p>

    <p>
        <%= f.label :cast %> </br> 
        <%= f.text_area :cast, cols:15, rows:3 %>
    </p>

    <p>
        <%= f.label :soundtrack %> </br> 
        <%= f.text_area :soundtrack, cols:15, rows:3 %>  
    </p>

    <p>
        <%= f.submit "Salvar" %>
    </p>
<% end %>